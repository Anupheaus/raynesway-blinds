{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@anupheaus/common": [
        "../common/src"
      ],
      "@anupheaus/react-ui": [
        "../react-ui/src"
      ]
    },
    "lib": [
      "DOM",
      "ES2020",
      "ES2015",
      "ESNext.AsyncIterable"
    ],
    "target": "es6",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
  ]
}
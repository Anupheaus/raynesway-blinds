{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2020",
      "ES2015",
      "ESNext.AsyncIterable"
    ],
    "target": "es6",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "public/**/*",
    "functions/**/*"
  ]
}